<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UltimateBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/start_button_color</item>
        <item name="colorPrimaryVariant">@color/start_button_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFEB3B</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="inputlayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
<!--        <item name="android:textColorHintInverse">@color/start_button_color</item>-->
<!--        <item name="android:textColorHint">@color/start_button_color</item>-->
        <item name="colorControlNormal">#09AF42</item>
        <item name="colorControlActivated">#09AF42</item>

    </style>


    <style name = "NoActionBar" parent = "Theme.AppCompat.DayNight.NoActionBar">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>

    //switch theme
    <style name="switch_theme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/bottom_nav_tem_color</item>
        <item name="colorControlNormal">@color/bottom_nav_tem_color</item>
    </style>

    <style name="Toolbar.TitleText.want" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>