<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.login.forgetpassword.verification_code">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerVertical="true">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/verification_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Verification Code"
                    android:textColor="@color/start_button_color"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_below="@+id/verification_code"
                    android:padding="10dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/email_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/verification_code"
                        android:layout_centerHorizontal="true"
                        android:text="We emailed you the six digit code to your email."
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/email_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email_text"
                        android:layout_centerHorizontal="true"
                        android:text="Enter the code below to confirm your email address"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/code_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_layout"

                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/otp1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/verification_box"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/start_button_color"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="11sp" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/otp2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/verification_box"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/start_button_color"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="11sp" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/otp3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/verification_box"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/start_button_color"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="11sp" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/otp4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/verification_box"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/start_button_color"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="11sp" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/otp5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/verification_box"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/start_button_color"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="11sp" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/otp6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/verification_box"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/start_button_color"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="11sp" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/verification_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/code_layout"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/start_button"
                    android:text="Verify"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <ProgressBar
                    android:id="@+id/progressbar_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/code_layout"
                    android:visibility="gone"
                    android:indeterminate="true"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@color/start_button_color"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    tools:targetApi="lollipop" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/below_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/verification_button"
                    android:layout_centerHorizontal="true"
                    android:text="Re-send code in  "
                    android:textColor="@color/black"
                    android:textSize="15sp"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/timer_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/verification_button"
                    android:layout_centerHorizontal="true"
                    android:layout_toEndOf="@+id/below_text"
                    android:text="0:20"
                    android:textColor="@color/start_button_color"
                    android:textSize="15sp" />

            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>





</FrameLayout>