<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Charity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/start_button_color</item>
        <item name="colorPrimaryVariant">#06810B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFEB3B</item>
        <item name="colorSecondaryVariant">#E91E63</item>
        <item name="colorOnSecondary">#2EF8D0</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/start_button_color</item>
        <!-- Customize your theme here. -->
    </style>

    //InputLayout theme
    <style name="inputlayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHintInverse">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">#09AF42</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>

    </style>

    //no actionbar
    <style name = "NoActionBar" parent = "Theme.AppCompat.DayNight.NoActionBar">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>

    //switch theme
    <style name="switch_theme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/bottom_nav_tem_color</item>
        <item name="colorControlNormal">@color/bottom_nav_tem_color</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>