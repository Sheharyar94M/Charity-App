<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.haqddarcherity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="com.google.android.gms.permission.AD_ID"
        tools:node="remove" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/charity_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/charity_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HaqddarCherity"
        tools:ignore="HardcodedDebugMode"
        tools:replace="android:icon,android:roundIcon,android:theme,android:label"
        tools:targetApi="s">
        <activity
            android:name=".about.AboutActivity"
            android:theme="@style/NoActionBar"
            android:exported="false" />
        <activity
            android:name=".authentication.SigninOptionsActivity"
            android:exported="false"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:resizeableActivity="true"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:resizeableActivity="true"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
